<%
  project = Project.find(project_id)
%>

<div class="row ms-2">

  <div class="col-2 p-2">
    <div class="mb-2">
      <label class="form-label mb-0" for="title">Baths</label>
      <%= text_field_tag 'dispositions_prepare_listing_pane[baths]', project.listing.baths.presence || project.baths, class: 'form-control', form: form_id, data: { action: 'dispositions-prepare-listing-pane#disableSendMarketingEmailButton' } %>
      <span></span>
    </div>
  </div>

  <div class="col-2 p-2">
    <div class="mb-2">
      <label class="form-label mb-0" for="title">HOA Fees</label>
      <%= text_field_tag 'dispositions_prepare_listing_pane[hoa_fees]', project.listing.hoa_fees.presence || project.hoa_fees, class: 'form-control', form: form_id, data: { action: 'dispositions-prepare-listing-pane#disableSendMarketingEmailButton' } %>
      <span></span>
    </div>
  </div>

  <div class="col-2 p-2">
    <div class="mb-2">
      <label class="form-label mb-0" for="title">Heating</label>
      <%= text_field_tag 'dispositions_prepare_listing_pane[heating]', project.listing.heating.presence || project.heating, class: 'form-control', form: form_id, data: { action: 'dispositions-prepare-listing-pane#disableSendMarketingEmailButton' } %>
      <span></span>
    </div>
  </div>

</div>
