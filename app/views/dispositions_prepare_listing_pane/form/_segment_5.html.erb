<% project = Project.find(project_id)
   %>

<div class="container">
  <div class="row ms-2">
    <div class="col p-2">
      <p>Term Details</p>
    </div>
  </div>
</div>

<div class="container">

  <!-- row 1 -->
  <div class="row ms-2">
    <div class="col p-2">
      <div class="mb-2">
        <label class="form-label mb-0" for="title">Down Payment</label>
        <%= text_field_tag 'dispositions_prepare_listing_pane[down_payment]', project.listing.down_payment, class: 'form-control', form: form_id, disabled: !project.dispositions_prepare_listing_term_details_editable?, data: { action: 'dispositions-prepare-listing-pane#disableSendMarketingEmailButton' } %>
        <span></span>
      </div>
    </div>

    <div class="col p-2">
      <div class="mb-2">
        <label class="form-label mb-0" for="title">Monthly Payment</label>
        <%= text_field_tag 'dispositions_prepare_listing_pane[monthly_payment]', project.listing.monthly_payment, class: 'form-control', form: form_id, disabled: !project.dispositions_prepare_listing_term_details_editable?, data: { action: 'dispositions-prepare-listing-pane#disableSendMarketingEmailButton' } %>
