<% project = Project.find(project_id) %>

<div class="container">
  <div class="row ms-2">
    <div class="col-12 p-2">

      <div class="mb-1">Title company <button id="example" type="button" class="btn" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Must send title the following information: (Check when completed)" data-controller="apollo-tooltip"><%= feather_icon('info') %></button></div>

      <%= render '/property_disposition_checklists/edit/check', label: 'Property Address', name: 'property_disposition_checklist[property_address]', checked: (project.property_disposition_checklist.property_address == 'true'), form: form_id %>

      <%= render '/property_disposition_checklists/edit/check', label: 'Owner contact info', name: 'property_disposition_checklist[owner_contact_info]', checked: (project.property_disposition_checklist.owner_contact_info == 'true'), form: form_id %>

      <%= render '/property_disposition_checklists/edit/check', label: 'Summary of deal and terms for title', name: 'property_disposition_checklist[summary_of_deal]', checked: (project.property_disposition_checklist.summary_of_deal == 'true'), form: form_id %>

      <%= render '/property_disposition_checklists/edit/check', label: 'Copy of REPC signed by both parties', name: 'property_disposition_checklist[copy_of_repc]', checked: (project.property_disposition_checklist.copy_of_repc == 'true'), form: form_id %>
    </div>

  </div>  

</div>
